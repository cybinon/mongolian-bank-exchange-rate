# Database configuration
# SQLite (for development)
DATABASE_URL=sqlite:///./exchange_rates.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://bankuser:bankpass123@localhost:5432/exchange_rates

# MySQL
# DATABASE_URL=mysql://bankuser:bankpass123@localhost:3306/exchange_rates

# Docker PostgreSQL (when using docker-compose)
# DATABASE_URL=postgresql://bankuser:bankpass123@db:5432/exchange_rates

# PostgreSQL settings (Docker)
POSTGRES_USER=bankuser
POSTGRES_PASSWORD=bankpass123
POSTGRES_DB=exchange_rates

# Schedule (cron format: minute hour day month day_of_week)
# Default: every day at 01:00
CRON_SCHEDULE=0 1 * * *

# SSL verification
SSL_VERIFY=False

# Timeouts
REQUEST_TIMEOUT=30
PLAYWRIGHT_TIMEOUT=60000

# Bank endpoints (URIs)
KHANBANK_URI=https://www.khanbank.com/api/back/rates
TDBM_URI=https://www.tdbm.mn/en/exchange-rates
GOLOMT_URI=https://www.golomtbank.com/api/exchange
XACBANK_URI=https://xacbank.mn/api/currencies
ARIGBANK_URI=https://www.arigbank.mn/en/rate
BOGDBANK_URI=https://www.bogdbank.com/exchange
STATEBANK_URI=https://www.statebank.mn/back/api/fetchrate
MONGOLBANK_URI=https://www.mongolbank.mn/en/currency-rate-movement/data
CAPITRONBANK_URI=https://www.capitronbank.mn/admin/en/wp-json/bank/rates/capitronbank
CKBANK_URI=https://www.ckbank.mn/currency-rates
TRANSBANK_URI=https://transbank.mn/en/exchange
NIBANK_URI=https://www.nibank.mn/en/rate
MBANK_URI=https://m-bank.mn/

# ArigBank specific settings (optional)
# API URL (default, usually no need to change)
# ARIGBANK_API_URL=https://www.arigbank.mn/exchange/getRate
# Bearer token (set here only if required and keep it secret!)
# ARIGBANK_BEARER_TOKEN=your_token_here
