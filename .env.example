# Өгөгдлийн сангийн тохиргоо
# SQLite (хөгжүүлэлтэд)
DATABASE_URL=sqlite:///./exchange_rates.db

# PostgreSQL (production-д)
# DATABASE_URL=postgresql://bankuser:bankpass123@localhost:5432/exchange_rates

# MySQL
# DATABASE_URL=mysql://bankuser:bankpass123@localhost:3306/exchange_rates

# Docker PostgreSQL (docker-compose ашиглахад)
# DATABASE_URL=postgresql://bankuser:bankpass123@db:5432/exchange_rates

# PostgreSQL тохиргоо (Docker-т)
POSTGRES_USER=bankuser
POSTGRES_PASSWORD=bankpass123
POSTGRES_DB=exchange_rates

# Хуваарийн тохиргоо (cron формат: минут цаг өдөр сар долоо_хоног)
# Өдөр бүр 01:00 цагт
CRON_SCHEDULE=0 1 * * *

# SSL тохиргоо
SSL_VERIFY=False

# Хугацааны хязгаар (секунд)
REQUEST_TIMEOUT=30
PLAYWRIGHT_TIMEOUT=60000

# Ариг банкны тохиргоо (хэрэв байвал)
# ARIGBANK_API_URL=https://api.arigbank.mn/v1/rates
# ARIGBANK_BEARER_TOKEN=your_token_here
